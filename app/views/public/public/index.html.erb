<div class="container">
  <h2>Welcome</h2>
  <div class="row">
    <div class="col-sm-6">
      <%= form_for(:session, url: '/login') do |f| %>
      <div class="form">
        <legend>Logga in</legend>
        <div class="form-group">
          <label class="control-label">Användarnamn</label>
          <%= f.text_field :email, class: "form-control" %>
        </div> 
        <div class="form-group">
          <label class="control-label">Lösenord</label>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Logga in" %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-sm-6">
      <%= form_for([:public, @user]) do |f| %>
        <div class="form">
        <legend>Registrera</legend>
        <div class="form-group">
          <label class="control-label">Användarnamn</label>
          <%= f.text_field :email, class: "form-control" %>
        </div> 
        <div class="form-group">
          <label class="control-label">Lösenord</label>
          <%= f.password_field:password, class: "form-control" %>
        </div> 
        <div class="form-group">
          <label class="control-label">Lösenord</label>
          <%= f.password_field:password_confirmation, class: "form-control" %>
        </div> 
        <div class="form-group">
          <%= f.submit "Registrera" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
