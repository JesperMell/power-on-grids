<div class="container">
  <%= form_for [:public, @game] do |f| %>
    <legend>Nytt Spel</legend>
  <div class="form-group">
    <label class="control-label">Namn</label>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Karta</label>
    <%= f.select :map_id, Map.all.map{|m| [m.name, m.id]}, {}, {class: 'form-control'} %>
